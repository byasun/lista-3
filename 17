import java.util.Scanner;
public class Main {
  public static void main(String[] args) {
    Scanner scan = new Scanner(System.in);
    double n = 7;
    double b = 0;
    double c = 0;
    for (int i=0; i < n; i++) {
      System.out.println("\nQual a idade dessa pessoa ");
      int a = scan.nextInt();
      System.out.println("\nDigite o peso: ");
      int v = scan.nextInt();
      if (v >= 90) {
        b ++;
      } 
      if (a >=0){
        c = c+a ;
      } 
      }
      c = c/7;
      System.out.println("Existem " + b + " pessoas com mais de 90 quilos");
      System.out.format("A média da idade entre essas pessoas é " + c);
  } 
}
